        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="#dadadc" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="#dadadc" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="1dp" android:left="1dp" android:top="0.5dp">
                <shape>
                    <solid android:color="#feffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>