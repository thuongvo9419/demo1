<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1dp" android:top="0dp">
                <shape>
                    <solid android:color="#5890d6" />
                    <corners android:radius="10dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="#5890d6" />
                    <corners android:radius="10dip"/>
                </shape>
            </item>
            <item android:bottom="2.5dp" android:right="1dp" android:left="1dp" android:top="0.2dp">
                <shape>
                    <solid android:color="#7ab0f2" />
                    <corners android:radius="10dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>